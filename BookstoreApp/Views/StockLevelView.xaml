<UserControl x:Class="BookstoreApp.Views.StockLevelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Label -->
            <TextBlock Grid.Column="0"
               Text="Vald butik:"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               Margin="0,0,8,0"
                       Visibility="{Binding SelectedStore,
                   Converter={StaticResource NullToVisibilityConverter}}"/>

            <!-- StoreId -->
            <TextBlock Grid.Column="1"
               Text="{Binding SelectedStore.StoreId}"
               VerticalAlignment="Center"
               Margin="0,0,12,0"/>

            <!-- Street -->
            <TextBlock Grid.Column="2"
               Text="{Binding SelectedStore.Street}"
               VerticalAlignment="Center"
               TextTrimming="CharacterEllipsis"/>

            <!-- Save button -->
            <Button Grid.Column="3"
            Content="Spara ändringar"
            Command="{Binding SaveStockLevelCommand}"
            Margin="12,0,0,0"/>
            <Button Grid.Column="4"
          Content="Avbryt"         
          Margin="12,0,0,0"/>
        </Grid>
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding StockLevel}"
                  SelectedItem="{Binding SelectedRow}" 
                  Margin="10"
                  Visibility="{Binding SelectedStore,
                   Converter={StaticResource NullToVisibilityConverter}}"
                 >  
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" 
                                    Binding="{Binding Isbn}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Titel" 
                                    Binding="{Binding Title}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Författare" 
                                    Binding="{Binding Author}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn 
                                    Binding="{Binding Quantity,
                                              Mode=TwoWay,
                                              UpdateSourceTrigger=LostFocus,
                                              ValidatesOnDataErrors=True,
                                              NotifyOnValidationError=True}">
                    <DataGridTextColumn.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="I lager"/>

                            <fa:IconBlock Icon="Edit"
                       Width="12"
                       Height="12"
                       Margin="2,0,0,0"
                       Foreground="Blue"
                       Cursor="Help"
                       ToolTip="Klicka på en cell för att redigera saldo."/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Style.Triggers>
                                <Trigger Property="Validation.HasError" Value="True">
                                    <Setter Property="ToolTip"
                                                Value="{Binding RelativeSource={RelativeSource Self},
                                                        Path=(Validation.Errors)[0].ErrorContent,
                                                        FallbackValue={x:Null},
                                                        TargetNullValue={x:Null}}" />
                                    
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>


                </DataGridTextColumn>

                <DataGridTextColumn 
                                    Binding="{Binding QuantityOrdered,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=LostFocus,
                                                      ValidatesOnDataErrors=True,
                                                      NotifyOnValidationError=True}">
                    <DataGridTextColumn.Header>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Antal beställda"/>

                            <fa:IconBlock Icon="Edit"
                       Width="12"
                       Height="12"
                       Margin="2,0,0,0"
                       Foreground="Blue"
                       Cursor="Help"
                       ToolTip="Klicka på en cell för att redigera saldo."/>
                        </StackPanel>
                    </DataGridTextColumn.Header>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>

                    <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Validation.HasError" Value="True">
                                                        <Setter Property="ToolTip"
                                                Value="{Binding RelativeSource={RelativeSource Self},
                                                        Path=(Validation.Errors)[0].ErrorContent,
                                                        FallbackValue={x:Null},
                                                        TargetNullValue={x:Null}}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>   
                </DataGridTextColumn>

                <DataGridTextColumn Header="Försäljningspris" 
                    Binding="{Binding SalesPrice}"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
            </DataGrid.Columns>   
        </DataGrid>
            
        
    <StackPanel Visibility="{Binding SelectedStore,
                         Converter={StaticResource NullToVisibilityInverseConverter}}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
                Grid.Row="1">

        <TextBlock Text="Ingen butik vald"
               FontSize="18"
               FontWeight="SemiBold"
               HorizontalAlignment="Center"/>

        <TextBlock Text="Välj en butik i menyn för att visa lagersaldo."
               Foreground="Gray"
               Margin="0,8,0,0"
               HorizontalAlignment="Center"/>
    </StackPanel>
    </Grid>

   
    
</UserControl>
