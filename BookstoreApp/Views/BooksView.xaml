<UserControl x:Class="BookstoreApp.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Ny bok"
                    Command="{Binding NewBookCommand}"
                    Margin="0,0,6,0"/>

            <Button Grid.Column="1"
                    Content="Redigera"
                    Command="{Binding EditBookCommand}"
                    Margin="0,0,6,0"/>

            <Button Grid.Column="2"
                    Content="Ta bort"
                    Command="{Binding DeleteBookCommand}"/>
        </Grid>

        <!-- Book list -->
        <DataGrid Grid.Row="1"
                  Margin="10"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding Rows}"
                  SelectedItem="{Binding SelectedBookRow}"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding Isbn}"
                                    Width="*"/>

                <DataGridTextColumn Header="Titel"
                                    Binding="{Binding Title}"
                                    Width="2*"/>

                <DataGridTextColumn Header="Pris"
                                    Binding="{Binding Price}"
                                    Width="*"/>

                <DataGridTextColumn Header="Utgiven"
                                    Binding="{Binding ReleaseDate,
                                              StringFormat={}{0:yyyy-MM-dd}}"
                                    Width="*"/>
                <DataGridTextColumn Header="Författare"
                                    Binding="{Binding AuthorsText}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
