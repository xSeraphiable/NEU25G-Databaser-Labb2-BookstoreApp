<Application x:Class="BookstoreApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookstoreApp"
             xmlns:views="clr-namespace:BookstoreApp.Views"
             xmlns:vm="clr-namespace:BookstoreApp.ViewModel"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:StockLevelViewModel}">
            <views:StockLevelView />
        </DataTemplate>

        <Style TargetType="DataGrid">
            <!-- Struktur -->
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>

            <!-- Utseende -->
            <Setter Property="RowHeaderWidth" Value="30"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>

            <!-- Rader -->
            <Setter Property="AlternatingRowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F6F8F0"/>

            <!-- Markering -->
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Style.Triggers>             
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>       
            </Style.Triggers>
        </Style>


        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!--Knappar-->
        <Style TargetType="Button">
            <!-- Storlek & text -->
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>

            <!-- Färger -->
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="BorderBrush" Value="#C8C8C8"/>
            <Setter Property="Foreground" Value="#333"/>

            <!-- Övrigt -->
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>

            <!-- 🔑 EGEN TEMPLATE -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6"
                    Padding="{TemplateBinding Padding}">

                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"/>
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                            </Trigger>

                            <!-- Pressed -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DADADA"/>
                            </Trigger>

                            <!-- Disabled -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
