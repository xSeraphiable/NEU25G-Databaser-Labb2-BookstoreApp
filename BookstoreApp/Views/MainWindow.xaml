<Window x:Class="BookstoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreApp"
        xmlns:views="clr-namespace:BookstoreApp.Views"  
        xmlns:vm="clr-namespace:BookstoreApp.ViewModel"
        mc:Ignorable="d"
        Title="Bookstore" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <!-- KOLUMNER -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <!-- Sidomeny -->
            <ColumnDefinition Width="*"/>
            <!-- Innehåll -->
        </Grid.ColumnDefinitions>

        <!-- MENY -->
        <views:MenuView Grid.Column="0"/>

        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentView}"
                        Margin="10"/>

    </Grid>
</Window>
