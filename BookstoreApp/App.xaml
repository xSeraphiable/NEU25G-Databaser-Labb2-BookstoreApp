<Application x:Class="BookstoreApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BookstoreApp"
             xmlns:views="clr-namespace:BookstoreApp.Views"
             xmlns:conv="clr-namespace:BookstoreApp.Converters"
             xmlns:vm="clr-namespace:BookstoreApp.ViewModel"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>

        <DataTemplate DataType="{x:Type vm:StockLevelViewModel}">
            <views:StockLevelView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BooksViewModel}">
            <views:BooksView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:AuthorsViewModel}">
            <views:AuthorView/>
        </DataTemplate>
        
        <conv:DateOnlyToDateTimeConverter x:Key="DateOnlyConverter"/>



        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="4,6,8,4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="4,0,0,6"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="4,0,0,6"/>
            <Setter Property="MinHeight" Value="10"/>
        </Style>

        <Style x:Key="FixedCalendarStyle" TargetType="Calendar">
            <Setter Property="CalendarItemStyle">
                <Setter.Value>
                    <Style TargetType="CalendarItem">
                        <Setter Property="MinHeight" Value="300"/>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="4,0,0,6"/>
        </Style>

 
        <Style TargetType="DataGrid">
            <!-- Struktur -->
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>

            <!-- Utseende -->
            <Setter Property="RowHeaderWidth" Value="30"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>

            <!-- Rader -->
            <Setter Property="AlternatingRowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F6F8F0"/>

            <!-- Markering -->
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>


        <Style TargetType="Button">
            <Setter Property="Padding" Value="2,0"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="BorderBrush" Value="#C8C8C8"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6"
                    Padding="{TemplateBinding Padding}">

                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        RecognizesAccessKey="True"
                        TextElement.Foreground="{TemplateBinding Foreground}"
                                />
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6E6E6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DADADA"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Application.Resources>
</Application>
