<UserControl x:Class="BookstoreApp.Views.StockLevelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Label -->
            <TextBlock Grid.Column="0"
               Text="Vald butik:"
               FontWeight="SemiBold"
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>

            <!-- StoreId -->
            <TextBlock Grid.Column="1"
               Text="{Binding SelectedStore.StoreId}"
               VerticalAlignment="Center"
               Margin="0,0,12,0"/>

            <!-- Street -->
            <TextBlock Grid.Column="2"
               Text="{Binding SelectedStore.Street}"
               VerticalAlignment="Center"
               TextTrimming="CharacterEllipsis"/>

            <!-- Save button -->
            <Button Grid.Column="3"
            Content="Spara ändringar"
            Command="{Binding SaveStockLevelCommand}"
            Margin="12,0,0,0"/>
            <Button Grid.Column="4"
          Content="Avbryt"         
          Margin="12,0,0,0"/>
        </Grid>
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding StockLevel}"
                  SelectedItem="{Binding SelectedRow}" 
                  Margin="10"
                 >  
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" 
                                    Binding="{Binding Isbn}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Titel" 
                                    Binding="{Binding Title}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="Författare" 
                                    Binding="{Binding Author}"
                                    IsReadOnly="True"/>
                <DataGridTextColumn Header="I lager"
                                    Binding="{Binding Quantity,
                                              Mode=TwoWay,
                                              UpdateSourceTrigger=LostFocus,
                                              ValidatesOnDataErrors=True,
                                              NotifyOnValidationError=True}">

                                    <DataGridTextColumn.EditingElementStyle>
                                        <Style TargetType="TextBox">
                                            <Style.Triggers>
                                                <Trigger Property="Validation.HasError" Value="True">
                                                    <Setter Property="ToolTip"
                                                Value="{Binding RelativeSource={RelativeSource Self},
                                                        Path=(Validation.Errors)[0].ErrorContent,
                                                        FallbackValue={x:Null},
                                                        TargetNullValue={x:Null}}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.EditingElementStyle>   
                </DataGridTextColumn>

                <DataGridTextColumn Header="Antal beställda"
                                    Binding="{Binding QuantityOrdered,
                                                      Mode=TwoWay,
                                                      UpdateSourceTrigger=LostFocus,
                                                      ValidatesOnDataErrors=True,
                                                      NotifyOnValidationError=True}">

                                        <DataGridTextColumn.EditingElementStyle>
                                            <Style TargetType="TextBox">
                                                <Style.Triggers>
                                                    <Trigger Property="Validation.HasError" Value="True">
                                                        <Setter Property="ToolTip"
                                                Value="{Binding RelativeSource={RelativeSource Self},
                                                        Path=(Validation.Errors)[0].ErrorContent,
                                                        FallbackValue={x:Null},
                                                        TargetNullValue={x:Null}}" />
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.EditingElementStyle>   
                </DataGridTextColumn>

                <DataGridTextColumn Header="Försäljningspris" 
                    Binding="{Binding SalesPrice}"
                    IsReadOnly="True"/>
                
            </DataGrid.Columns>   
        </DataGrid>
            
    </Grid>
</UserControl>
