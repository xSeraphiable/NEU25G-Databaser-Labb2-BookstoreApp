<UserControl x:Class="BookstoreApp.Views.AuthorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Grid Grid.Row="0" Margin="10" HorizontalAlignment="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
     
            <StackPanel Orientation="Horizontal" >
                <Button Grid.Column="0"
     Content="Ny författare"
     Command="{Binding NewAuthorCommand}"
     Margin="0,0,6,0"/>

                <Button Grid.Column="1"
     Content="Redigera"
     Command="{Binding EditAuthorCommand}"
     Margin="0,0,6,0"/>

                <Button Grid.Column="2"
     Content="Ta bort"
     Command="{Binding DeleteAuthorCommand}"/>
            </StackPanel>
            
        </Grid>

        <!-- Author list -->
        <DataGrid Grid.Row="1"
               Margin="10"
               AutoGenerateColumns="False"
               ItemsSource="{Binding AuthorRows}"
               SelectedItem="{Binding SelectedAuthorRow}"
               IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID"
                                 Binding="{Binding AuthorId}"
                                 Width="*"/>

                <DataGridTextColumn Header="Namn"
                                 Binding="{Binding FullName}"
                                 Width="2*"/>

                <DataGridTextColumn Header="Födelsedatum"
                                 Binding="{Binding DateOfBirth,
                                           StringFormat={}{0:yyyy-MM-dd}}"
                                 Width="*"/>
                <DataGridTextColumn Header="Antal böcker"
                                 Binding="{Binding BookCount}"
                                 Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
