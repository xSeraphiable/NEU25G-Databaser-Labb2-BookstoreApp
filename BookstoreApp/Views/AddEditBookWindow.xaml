<Window x:Class="BookstoreApp.Views.AddEditBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookstoreApp.Views"
        mc:Ignorable="d"
        Title="AddEditBookWindow" Height="450" Width="800">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FORMULÄR (kommer sen) -->
        <StackPanel>
            <TextBlock Text="Formulär här..." />
        </StackPanel>

        <!-- KNAPPAR -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">

            <Button Content="Avbryt"
                    IsCancel="True"
                    Margin="0,0,6,0"/>

            <Button Content="Spara"
                    IsDefault="True"
                    Click="OnSaveClicked"/>
        </StackPanel>
    </Grid>
</Window>
