<UserControl x:Class="BookstoreApp.Views.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="BooksView_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Rubrik -->
            <RowDefinition Height="Auto" MinHeight="40"/>
            <!-- Knappar -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>
        <!-- RUBRIK -->
        <Grid Grid.Row="0" Margin="10">

            <StackPanel>
                <TextBlock
            Text="Bokregister"
            FontSize="24"
            FontWeight="Black"/>

                <TextBlock
            Text="Hantera böcker i systemet"
            Foreground="Gray"
             Margin="8,2,0,0"/>
            </StackPanel>

        </Grid>
        <Grid Grid.Row="1" Margin="10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
            Content="Ny bok"
            Command="{Binding NewBookCommand}"
                        Margin="12,0,0,0"
            VerticalAlignment="Center"
            />

            <Button Grid.Column="2"
            Content="Redigera"
            Command="{Binding EditBookCommand}"
                        Margin="12,0,0,0"
            VerticalAlignment="Center"
            />

            <Button Grid.Column="3"
            Content="Ta bort"
            Command="{Binding DeleteBookCommand}"
                                Margin="12,0,0,0"
            VerticalAlignment="Center"
            />

        </Grid>

        <DataGrid Grid.Row="2"
                  Margin="10"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding BookRows}"
                  SelectedItem="{Binding SelectedBookRow}"
                  IsReadOnly="True"
                  Language="sv-SE">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding Isbn}"
                                    Width="*"/>

                <DataGridTextColumn Header="Titel"
                                    Binding="{Binding Title}"
                                    Width="2*"/>

                <DataGridTextColumn Header="Försäljningspris"
                                    Binding="{Binding Price}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Utgiven"
                                    Binding="{Binding ReleaseDate}"
                                    Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Författare"
                                    Binding="{Binding AuthorsText}"
                                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
