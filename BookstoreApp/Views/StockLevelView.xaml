<UserControl x:Class="BookstoreApp.Views.StockLevelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookstoreApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="8 8 0 0">
            <TextBlock Text="Vald butik: " Margin="2" FontWeight="Bold"/>
            <TextBlock Text="{Binding SelectedStore.StoreId, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>
            <TextBlock Text=" "/>
            <TextBlock Text="{Binding SelectedStore.Street, UpdateSourceTrigger=PropertyChanged}" Margin="2"/>    
        </StackPanel>
        <DataGrid Grid.Row="1"
                  AutoGenerateColumns="False"
                  ItemsSource="{Binding StockLevel}"
                  AlternatingRowBackground="PaleTurquoise"
                  Margin="10 0 10 10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}"/>
                <DataGridTextColumn Header="Titel" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Författare" Binding="{Binding Author}"/>
                <DataGridTextColumn Header="I lager" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Antal beställda" Binding="{Binding QuantityOrdered}"/>
                <DataGridTextColumn Header="Försäljningspris" Binding="{Binding SalesPrice}"/>
            </DataGrid.Columns>   
        </DataGrid>
            
    </Grid>
</UserControl>
